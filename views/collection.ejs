        <td><%= collection['num_owners'] %></td>
      </tr>
    </tbody>
  </table> -->

    <div class="array-collection-section">
      <table class="table table-borderless table-collection">
        <thead class="thead-dark">
          <tr>
            <th scope="col"></th>
            <th scope="col">24 Hours</th>
            <th scope="col">7 Days</th>
            <th scope="col">30 Days</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">Average Price</th>
            <td><%= collection['one_day_average_price'] %></td>
            <td><%= collection['seven_day_average_price'] %></td>
            <td><%= collection['thirty_day_average_price'] %></td>
          </tr>
          <tr>
            <th scope="row">Price Change</th>
            <td><%= collection['one_day_change'] %></td>
            <td><%= collection['seven_day_change'] %></td>
            <td><%= collection['thirty_day_change'] %></td>
          </tr>
          <tr>
            <th scope="row">Sales</th>
            <td><%= collection['one_day_sales'] %></td>
            <td><%= collection['seven_day_sales'] %></td>
            <td><%= collection['thirty_day_sales'] %></td>
          </tr>
          <tr>
            <th scope="row">Volume</th>
            <td><%= collection['one_day_volume'] %></td>
            <td><%= collection['seven_day_volume'] %></td>
            <td><%= collection['thirty_day_volume'] %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <br><br>
    <button id="btn-show-graph-fp" value="Details" class="btn-actions btn-custom-info"><i class="fa-solid fa-chart-line"></i> Chart Floor Price history</button>
    <br><br>
    <div class="chart-collection-section">
      <canvas id="chartCollection"></canvas>
    </div>
    <hr>
  </div>
</main>
<%- include('partials/footer'); -%>