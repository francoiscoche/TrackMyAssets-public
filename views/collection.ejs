<%- include('partials/header'); -%>
<% if (collection[0]) { %>
<%      collection = collection[0]; %>
<%  } %>

<main>
  <span id="slug" hidden><%= collection['collection_name'] %></span>
  <div class="col-md-10 offset-md-1">
    <hr>
    <br>
    <h5 class="title-custom-section"> <i class="fa-regular fa-circle-check"></i> Detailed collection stats</h5>
    <br><br>
    <div class="header-collection-section">
      <div class="col-12">
        <div class="row">
          <!-- <div class="col-7"> -->
          <div class="title-collection">
            <img class="icon-collection" src=<%= collection['image_url'] %> alt="Girl in a jacket">
            <h5 id="collection-name"><%= collection['name'] %></h5>
          </div>
          <br><br>
          <%= collection['description'] %>
          <br><br>
          <br>
          <div class="social-network">
            <% if (collection['external_link']) { %><a href='<%= collection['external_link'] %>' , target="_blank" data-toggle="tooltip" data-placement="top" title="Site Web"><i class="fa-solid fa-computer"></i></a><%  } %>
            <% if (collection['telegram_url']) { %><a href='<%= collection['telegram_url'] %>' , target="_blank" data-toggle="tooltip" data-placement="top" title="Telegram"><i class="fa-brands fa-telegram"></i></a><%  } %>
            <% if (collection['discord_url']) { %><a href='<%= collection['discord_url'] %>' , target="_blank" data-toggle="tooltip" data-placement="top" title="Discord"><i class="fa-brands fa-discord"></i></a><%  } %>
            <% if (collection['twitter_username']) { %><a href='https://www.twitter.com/<%= collection['twitter_username'] %>' , target="_blank" data-toggle="tooltip" data-placement="top" title="Twitter"><i class="fa-brands fa-twitter"></i></a><%  } %>

            <% if (collection['collection_name']) { %><a href='https://opensea.io/collection/<%= collection['collection_name'] %>' , target="_blank">OpenSea</a><%  } %>
          </div>
          <!-- </div> -->
          <!-- <div class="col-5 header-encart-section"> -->
          <div class="row">
            <div class="col-3 header-encart">
              <span class="title-encart">Floor Price</span><br>
              <span class="value-encart"></span><img class="icon-currency" src="/img/icons-currency/eth.png" alt="icon currency"><%= collection['floor_price'] %></span>
            </div>
            <div class="col-3 header-encart">
              <span class="title-encart">Supply</span><br>
              <span class="value-encart"><%= collection['total_supply'] %></span>
            </div>
            <!-- </div> -->
            <!-- <div class="row"> -->
            <div class="col-3 header-encart">
              <span class="title-encart">Market Cap</span><br>
              <span class="value-encart"></span><%= collection['market_cap'] %></span>
            </div>
            <div class="col-3 header-encart">
              <span class="title-encart">Holders</span><br>
              <span class="value-encart"></span><%= collection['num_owners'] %></span>
            </div>
          </div>
          <!-- </div> -->
        </div>
      </div>
    </div>
    <br><br>
